<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <!-- BASE LINK -->

    <link name="base_link"/>

    <!-- CHASSIS LINK -->

    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="0 0 0.25" rpy="0 0 0"/>
    </joint>

    <link name="chassis">
        <visual>
            <origin xyz="0.03992 0.11293 -0.02583" rpy="${pi/2} 0 0"/>
            <geometry>
                <mesh filename="package://droid/description/meshes/chassis.STL" scale="0.001 0.001 0.001"/>
            </geometry>
            <material name="white"/>
        </visual>
    </link>

    <!-- LEFT HIP LINK -->

    <joint name="left_hip_joint" type="revolute">
        <parent link="chassis"/>
        <child link="left_hip"/>
        <origin xyz="0 0.0461 0" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <limit lower="0" upper="${pi/6}" velocity="100" effort="100"/>
    </joint>

    <link name="left_hip">
        <visual>
            <origin xyz="-0.05164 0.06573 -0.08226" rpy="${pi/2} 0 0"/>
            <geometry>
                <mesh filename="package://droid/description/meshes/left_hip.STL" scale="0.001 0.001 0.001"/>
            </geometry>
            <material name="white"/>
        </visual>
    </link>

    <!-- RIGHT HIP LINK -->

    <joint name="right_hip_joint" type="revolute">
        <parent link="chassis"/>
        <child link="right_hip"/>
        <origin xyz="0 -0.0461 0" rpy="0 0 0"/>
        <axis xyz="0 0 -1"/>
        <limit lower="0" upper="${pi/6}" velocity="100" effort="100"/>
    </joint>

    <link name="right_hip">
        <visual>
            <origin xyz="-0.04505 0.06602 -0.0717" rpy="${pi/2} 0 0"/>
            <geometry>
                <mesh filename="package://droid/description/meshes/right_hip.STL" scale="0.001 0.001 0.001"/>
            </geometry>
            <material name="white"/>
        </visual>
    </link>

</robot>